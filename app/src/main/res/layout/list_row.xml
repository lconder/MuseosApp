<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/museo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/md_pink_900"
        android:layout_alignTop="@+id/circleView"
        android:layout_toRightOf="@+id/circleView"
        android:layout_toEndOf="@+id/circleView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress"
        android:id="@+id/museo_status"
        android:textSize="14dp"
        android:textColor="@color/md_pink_700"
        android:layout_below="@+id/museo_name"
        android:layout_alignLeft="@+id/museo_name"
        android:layout_alignStart="@+id/museo_name" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_black_1000_10"
        android:layout_below="@+id/circleView"
        android:layout_alignLeft="@+id/museo_status"
        android:layout_alignStart="@+id/museo_status" />
</RelativeLayout>